{{!-- Display blog posts by logged in user --}}
<head>
  <script src="/js/dashboard.js"></script>
  <link rel="stylesheet" href="/css/dashboard.css">
</head>

{{#if posts}}
  <h2>My Blog Posts</h2>
  <ul>
    {{#each posts}}
      <li>
        <h3>Blog Title: {{this.title}}</h3>
        <a href="/posts/{{this.id}}">View</a>
        <a href="/posts/{{this.id}}/edit">Edit</a>
        <form action="/posts/{{this.id}}/delete" method="POST">
          <button type="submit">Delete</button>
        </form>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No posts found.</p>
{{/if}}


{{> createPostForm}}